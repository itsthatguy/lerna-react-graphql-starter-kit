{
  "compilerOptions": {
    "allowJs": true,
    "outDir": ".build",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "target": "es2016",
    "typeRoots": ["./node_modules/@types/", "./index.d.ts"],
    "rootDir": "./src/",
    "preserveSymlinks": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**",
    "**/*.test.ts*",
    "__tests__/setup.js",
    ".build",
    "./*.js"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
