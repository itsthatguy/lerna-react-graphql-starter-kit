{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./.build",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "target": "es2016",
    "typeRoots": ["./node_modules/@types/", "./index.d.ts"],
    "rootDir": "."
  },
  "exclude": ["apps/**", "node_modules/**", "**/*.test.ts*"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
